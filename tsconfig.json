{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "lib": [
      "es6"
    ],
    "baseUrl": ".",
    "paths": {
      "app/*": ["app/*/index", "app/*"]
    }
  },
  "include": ["app/**/*.tsx"],
  "exclude": [
    "./node_modules",
    "**/babel.config.js"
  ]
}